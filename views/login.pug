extends layout

block content
   .container
      
      h1.text-center.top-buffer Access Management Platform 
      h2.text-center.top-buffer Login Page
      form.form-horizontal(role="form", action="users/login" method="post")
        .form-group
          .alert.alert-danger(role='alert', id="msgDiv")

        .form-group
          label.col-sm-3.control-label(for="username") 
           strong User Name
          .col-sm-9
            input#username.form-control(type="text" name="username" placeholder="User Name" autofocus="" value="")
        br

        .form-group
          label.col-sm-3.control-label(for="password") 
           strong Password
          .col-sm-9
            input#password.form-control(type="password" name="password" placeholder="Password") 
        br

        .form-group
          label.col-sm-3.control-label(for="login") 
           strong 
          .col-sm-9
            button#login.btn.btn-primary.btn-block(type="e") Login                 
        br
        .form-group
          .col-sm-9
                | &nbsp; Don't have an account?  
                a(href="/users/register") Register