extends layout

block content
   .container
      
      h2.text-center.top-buffer Profile Update
      form.form-horizontal(role="form", method="post")
        .form-group
          .alert.alert-danger(role='alert', id="msgDiv")

        .form-group
          label.col-sm-3.control-label(for="firstname") 
           strong Full Name
          .col-sm-9
            input#firstname.form-control(type="text" name="firstname" placeholder="First Name" autofocus="" value=user.name)
        br

        .form-group
          label.col-sm-3.control-label(for="lastname") 
           strong Last Name
          .col-sm-9
            input#lastname.form-control(type="text" name="lastname" placeholder="Last Name" autofocus="")
        br
        .form-group
          label.col-sm-3.control-label(for="username") 
           strong User Name
          .col-sm-9
            input#username.form-control(type="text" name="username" placeholder="User Name" autofocus="" )
        br

        .form-group
          label.col-sm-3.control-label(for="email") 
           strong Email
          .col-sm-9
            input#email.form-control(type="email" name="email" placeholder="Email" )
        br
        .form-group
          label.col-sm-3.control-label(for="mobile") 
           strong Mobile
          .col-sm-9
            input#mobile.form-control(type="text" name="mobile" placeholder="Mobile" )
        br

        .form-group
          label.col-sm-3.control-label(for="password") 
           strong Password
          .col-sm-9
            input#password.form-control(type="password" name="password" placeholder="Password" )
        br

        .form-group
          label.col-sm-3.control-label(for="cpassword") 
           strong Confirm Password
          .col-sm-9
            input#cpassword.form-control(type="password" name="cpassword" placeholder="Confirm password" )
        br             
        br
        .form-group
          .col-sm-9.col-sm-offset-3
            button#update.btn.btn-primary.btn-block(type="e") Update



